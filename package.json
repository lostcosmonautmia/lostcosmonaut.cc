{
  "name": "lostcosmonaut.cc",
  "private": true,
  "description": "Source code repository for the Lost Cosmonaut website.",
  "homepage": "https://github.com/lostcosmonautmia/lostcosmonaut.cc",
  "bugs": "https://github.com/lostcosmonautmia/lostcosmonaut.cc/issues",
  "license": "CC-BY-NC-SA-4.0",
  "author": "Jason Garber <jason@sixtwothree.org> (https://sixtwothree.org)",
  "repository": "github:lostcosmonautmia/lostcosmonaut.cc",
  "scripts": {
    "build": "eleventy --quiet",
    "clean": "rm -rf public",
    "lint": "FORCE_COLOR=1 npm-run-all --continue-on-error --serial lint:**",
    "lint:scripts": "eslint .",
    "lint:styles": "stylelint ./src/**/*.css",
    "prebuild": "npm run clean",
    "prestart": "npm run clean",
    "pretest": "npm run build",
    "start": "eleventy --quiet --serve",
    "test": "test -f ./public/index.html"
  },
  "devDependencies": {
    "@11ty/eleventy": "latest",
    "eslint": "^8.4.1",
    "npm-run-all": "latest",
    "stylelint": "latest",
    "stylelint-config-standard": "latest",
    "stylelint-order": "latest"
  }
}
